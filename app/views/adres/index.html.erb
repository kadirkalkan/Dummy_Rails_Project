<table class="table table-striped">
  <thead>
    <th>#</th>
    <th>AD</th>
    <th>Soyad</th>
    <th>Email</th>
    <th colspan="2">Actions</th>
  </thead>
  <tbody>
      <% @model.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.surname %></td>
          <td><%= item.email %></td>
          <td><%= link_to 'Edit', "adres/#{item.id}/edit", class:"btn btn-sm btn-warning" %></td>
          <td><%= button_to 'Destroy', destroy_adres_path(item.id), method: :delete, class:"btn btn-sm btn-danger"%></td>
        </tr>
      <% end %>
  </tbody>
</table>
